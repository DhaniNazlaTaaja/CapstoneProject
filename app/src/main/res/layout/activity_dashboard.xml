<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Dashboard">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_radius_background"
        android:backgroundTint="@color/colorBirulangit"
        android:orientation="vertical">

        <TextView
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Selamat Datang\n Aplikasi Rute Angkot"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:gravity="center"
        android:padding="15dp">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="rute"
            android:src="@drawable/img_daftar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="rute"
            android:text="Daftar Rute"
            android:textAlignment="center"
            android:textColor="@color/colorAbu"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:gravity="center"
        android:padding="15dp">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="about"
            android:src="@drawable/img_about" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="about"
            android:text="Tentang Apk"
            android:textAlignment="center"
            android:textColor="@color/colorAbu"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>