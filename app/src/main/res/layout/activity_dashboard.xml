<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Dashboard">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_radius_background"
        android:backgroundTint="@color/colorBirulangit"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="APLIKASI"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold"
            android:fontFamily="@font/mmedium"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="RUTE ANGKOT"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/mlight"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:gravity="center"
        android:padding="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="rute"
            android:src="@drawable/img_daftar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center|center_horizontal"
            android:background="@drawable/bg_radius_background"
            android:backgroundTint="@color/colorBirulangit"
            android:clickable="true"
            android:fontFamily="@font/mmedium"
            android:onClick="rute"
            android:text="DAFTAR RUTE"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:gravity="center"
        android:padding="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="about"
            android:src="@drawable/img_about" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center|center_horizontal"
            android:background="@drawable/bg_radius_background"
            android:backgroundTint="@color/colorBirulangit"
            android:clickable="true"
            android:onClick="about"
            android:text="TENTANG APLIKASI"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textAlignment="center"
            android:fontFamily="@font/mmedium"/>

    </LinearLayout>

</LinearLayout>